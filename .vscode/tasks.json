{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Teleios Build",
            "command": "${workspaceFolder}/build/build.sh",
            "linux": {
                "args": [
                    "linux",
                    "build",
                    "debug"
                ]
            },
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "type": "shell",
            "label": "Teleios Run",
            "dependsOn": [ "Teleios Build" ],
            "command": "${workspaceFolder}/build/run.sh",
            "linux": {
                "args": [
                    "${workspaceFolder}/sandbox/application.yml"
                ]
            },
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true },
        }
    ],
}